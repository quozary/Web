@{
    ViewData["Title"] = "Новости";
}

<h1 class="news-title">Новости автосалона "Гаечка"</h1>

<div class="news-container">
    @foreach (var newsItem in Model)
    {
        <div class="news-card">
            <a href="@Url.Action("Details", "News", new { id = newsItem.Id })">
                <img src="@newsItem.ImageUrl" alt="@newsItem.Title" class="news-image">
            </a>
            <div class="news-content">
                <h2>@newsItem.Title</h2>
                <p>@newsItem.ShortDescription</p>
            </div>
        </div>
    }
</div>

<style>
    body {
        font-family: 'Roboto Flex', Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #1E1E1E;
        color: #D1D1D1;
    }

    .news-title {
        text-align: center;
        font-size: 3em;
        font-weight: 700;
        color: #4A90E2;
        margin: 20px 0;
    }

    .news-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .news-card {
        background-color: #2C2C2C;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        width: 300px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .news-card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }

    .news-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .news-content {
        padding: 15px;
    }

    .news-content h2 {
        font-size: 1.5em;
        color: #6FCF97;
        margin: 0 0 10px;
    }

    .news-content p {
        font-size: 1em;
        line-height: 1.5;
        color: #D1D1D1;
        margin: 0;
    }
</style>
